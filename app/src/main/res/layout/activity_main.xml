<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/start_bg"
        android:scaleType="centerCrop"/>

    <TextView android:text="How are you feeling?" android:layout_width="fill_parent"
        android:gravity="center"
        android:textSize="35dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bad"
        android:id="@+id/bad_button"
        android:layout_weight="1.0"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:src="@drawable/sad_face"
            />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Good"
        android:id="@+id/good_button"
        android:layout_weight="1.0"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:src="@drawable/happy_face"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motor State"
        android:id="@+id/motor_text"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginEnd="187dp" />



</RelativeLayout>
